<div class="container-fluid">
  <div class="row">
  {{!--  The todo list  --}}
    <div class="col-sm-6" style="background-color:lavender;">
    <div class="barColor">
        <p> Create a new Todo list</p>
        <button onclick="document.getElementById('id01').style.display='block'" style="width:auto;" class="w3-button w3-xlarge w3-circle w3-teal">+</button>
    </div>
    
    <div id="id01" class="modal">
        <form class="modal-content animate">
          <div class="imgcontainer">
            <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>
          </div>
      
          <div class="container">
            <label><b>Title </b></label>
            <input type="text" placeholder="Add the title of the list" name="titleOflist" required>
            <button type="submit">Enter</button>
          </div>
      
          <div class="container" style="background-color:#f1f1f1">
            <button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn">Cancel</button>
          </div>
        </form>
      </div>
      
      <script>
      // Get the modal
      var modal = document.getElementById('id01');
      
      // When the user clicks anywhere outside of the modal, close it
      window.onclick = function(event) {
          if (event.target == modal) {
              modal.style.display = "none";
          }
      }
      </script>

  </div>
    
    
    
